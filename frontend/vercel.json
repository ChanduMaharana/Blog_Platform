{
  "version": 2,
  "framework": "angular",
  "buildCommand": "npm run build:ssr",
  "outputDirectory": "dist/blog-platform/browser",
  "rewrites": [
    {
      "source": "/post/:id",
      "destination": "https://blog-backend-biys.onrender.com/api/posts/:id"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/blog-platform/server/server.mjs"
    }
  ],
  "functions": {
    "dist/blog-platform/server/server.mjs": {
      "runtime": "nodejs20.x",
      "maxDuration": 60
    }
  }
}